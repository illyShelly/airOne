<div class="container">
  <div class="row">
    <div class="col-md-3">
      <ul class="sidebar-list">
        <li class="sidebar-item"><%= link_to "Payment Method", payment_method_path, class: "sidebar-link active" %></li>
        <li class="sidebar-item"><%= link_to "Payout Method", payment_method_path, class: "sidebar-link" %></li>
        <li class="sidebar-item"><%= link_to "Notification Settings", payment_method_path, class: "sidebar-link" %></li>
      </ul>
    </div>

    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">Payment Method</div>
          <div class="panel-body">

            <!-- <div class="container"> -->

              <div class="card" style="margin-bottom: 20px;"></div>
                <!-- do not make space("/add_card") -->
                <%= form_tag("/add_card", method: "post", id: "add-card") do %>
                  <div class="row pull-center">
                    <div class="col-md-12">

                      <div class="well">

                        <div class="row">
                          <div class="col-md-8 form-group">
                            <label>Card Number</label>
                            <input type="text" name="number" class="form-control">
                          </div>

                          <div class="col-md-4 form-group">
                            <label>Expiration</label>
                            <input type="text" name="expiry" placeholder="MM/YY" class="form-control">
                          </div>
                        </div>
                        <!-- end of first row -->
                        <div class="row">
                          <div class="col-md-8 form-group">
                            <label>Name</label>
                            <input type="text" name="name" class="form-control">
                          </div>

                          <div class="col-md-4 form-group">
                            <label>CVV</label>
                            <input type="text" name="cvv" class="form-control">
                          </div>
                        </div>
                      <!-- end of second row -->

                        <div class="row">
                          <div class="col-md-12 text-right">
                            <% if current_user.stripe_id.blank? %>
                              <button class="btn btn-normal btn-block">Add Card</button>
                            <% else %>
                              <button class="btn btn-form btn-block">Update Card</button>
                            <% end %>
                          </div>
                        </div>

                      </div>
                      <!-- end of well -->

                    </div> <!-- end of col-md-12 -->

                  </div>

                <% end %>
            <!-- </div> -->

        </div>
      </div>
    </div> <!-- col-md-9 end -->
  </div>
</div>


<script>
  $(function() {
    var card = new Card({
      form: '#add-card',
      container: '.card'
    })
  })
</script>
