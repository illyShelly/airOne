<div class="row">
  <div class="col-md-4 offset-md-4">

  <h2 class="text-center">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "john.smith@example.com" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Your Password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %> Remember Me
          <%#= f.label :remember_me, class: "form-check-label"%>
        </div>
      <% end %>
      <br>
      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <br>
    <%= render "devise/shared/links" %>

  </div>
</div>


