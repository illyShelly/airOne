<div class="container">
   <div class="row">
    <div class="col-md-3">
      <ul class="sidebar-list">
        <li class="sidebar-item"><%= link_to "Your Listings", rooms_path, class: "sidebar-link" %></li>
        <li class="sidebar-item"><%= link_to "Your Reservations", rooms_path, class: "sidebar-link" %></li>
        <li class="sidebar-item"><%= link_to "My Trips", your_trips_path, class: "sidebar-link active" %></li>
      </ul>
    </div>

    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          My Trips
        </div>
        <div class="panel-body">
          <!-- @current_user.reservations -->
          <% @trips.each do |mybooking| %>
            <div class="row">
              <!-- 1. col - display date -->
              <div class="col-md-2 font-display">
                <%= mybooking.start_date.strftime('%v') %>
              </div>
              <!-- 2. col - pic of room, cover_photo method -->
              <div class="col-md-3">
                <%= link_to room_path(mybooking.room) do %>
                  <%= image_tag mybooking.room.cover_photo(resize: '300x300>'), class: 'image-present' %>
                <% end %>
              </div>
              <!-- 3. col - name of room -->
              <div class="col-md-7">
               <%= link_to mybooking.room.listing_name, room_path(mybooking.room) %>
               <span class="pull-right text-center">
                <!-- display avatar & link to user profile -->
                <%= link_to user_path(mybooking.user) do %>
                <%= image_tag avatar_url(mybooking.user), class: 'avatar-medium' %><br>
                  <%= mybooking.user.fullname %>
                <% end %>
               </span>
              </div>
            </div>

            <!-- division for next room -->
            <hr>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 1. similar layout like in rooms index -->

