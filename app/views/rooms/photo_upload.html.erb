<div class="container">

  <div class="row">
    <div class="col-md-3">
      <%= render 'room_menu' %>
    </div>
    <!-- second column -->
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          Photos
        </div>

        <div class="panel-body">
          <div class="container">
            <div class="row">
              <div class="offset-md-3 col-md-6">
                <!-- photos upload goes here -->
                <%= form_for @room do |f| %>

                    <div class="form-group">
                      <span class="btn btn-default btn-file text-babu">
                        <i class="fa fa-cloud" aria-hidden="true"></i> Select Photos
                        <%= f.file_field :images, multiple: true, class: "form-control", required: true %>
                      </span>
                    </div>
                  <!-- submit button -->
                  <div class="text-center">
                    <%= f.submit "Add Photos", class: "btn btn-small" %>
                  </div>

                <% end %>
              </div>
            </div>
            <div id="photos"> <%= render 'photos_list' %></div>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>
