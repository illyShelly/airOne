<!-- default structure -->
<div class="container">

  <div class="row">
    <div class="col-md-3">
      <%= render 'room_menu' %>
    </div>

    <!-- second column -->
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          Description
        </div>

        <div class="panel-body">
          <!-- <div class="container"> -->
             <%= form_for @room do |f| %>

              <!-- <div class="row"> -->
                <div class="form-group">
                  <label>Description</label>
                  <!-- no address but as defined in params roomsController -->
                  <%= f.text_field :listing_name, placeholder: "What is your address?", class: "form-control", required: true %>
                </div>
              <!-- </div> -->
              <!-- summary -->
              <!-- <div class="row"> -->
                <div class="form-group">
                  <label>Summary</label>
                  <%= f.text_area :summary, rows: 5, placeholder: "Give more details about your property.", class: "form-control", required: true %>
                </div>
              <!-- </div> -->

              <div class="text-center">
                <%= f.submit "Save", class: "btn btn-small" %>
              </div>

            <% end %>
          <!-- </div> -->
        </div>
      </div>
    </div>
</div>
