<div class="container">

  <div class="panel panel-default">
    <div class="panel-heading">Create your beautiful place</div>
    <div class="panel-body">
      <!-- <div class="container"> -->

        <%= form_for @room do |f| %>

          <div class="row">
            <div class="col-md-4 select">
              <div class="form-group">
                <label>Home Type: </label>
                <!-- name and value -->
                <%= f.select :home_type, [["Apartment", "Apartment"], ["House", "House"], ["Bed & Breakfast", "Bed & Breakfast"]], id: "home_type", prompt: "Select...", class: "form-control" %>
              </div>
            </div>

            <div class="col-md-4 select">
              <div class="form-group">
                <label>Room Type: </label>
                <!-- name and value -->
                <%= f.select :room_type, [["Entire", "Entire"], ["Private", "Private"], ["Shared", "Shared"]], id:"room_type", prompt: "Select...", class: "form-control" %>
              </div>
            </div>

            <div class="col-md-4 select">
              <div class="form-group">
                <label>Booking Type: </label>
                <!-- model: instant: { Request: 0, Instant: 1 }, by default we have Instant -->
                <%= f.select :instant, Room.instants.map { |key, value| [key.humanize, key] }, selected: @room.instant, prompt: "Select...", class: "form-control" %>
              </div>
            </div>


            <div class="col-md-4 select">
              <div class="form-group">
                <label>Accommodate: </label>
                <!-- name and value -->
                <%= f.select :accommodate, [["1", 1], ["2", 2], ["3", 3], ["4", 4]], id:"accommodate", prompt: "Select...", class: "form-control" %>
              </div>
            </div>

            <div class="col-md-4 select">
              <div class="form-group">
                <label>Bedrooms: </label>
                <!-- name and value -->
                <%= f.select :bed_room, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]], id:"bed_room", prompt: "Select...", class: "form-control" %>
              </div>
            </div>

            <div class="col-md-4 select">
              <div class="form-group">
                <label>Bathrooms: </label>
                <!-- name and value -->
                <%= f.select :bath_room, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]], id:"bath_room", prompt: "Select...", class: "form-control" %>
              </div>
            </div>
          </div>

          <div><%= f.submit "Add new room", class: "btn btn-small" %></div>
        <% end %>
      <!-- </div> -->
    </div>
  </div>

</div>
