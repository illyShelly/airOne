<div class="container">
  <div class="row">
    <div class="col-md-12">
      <!-- @room var => finding its id -->
      <%= image_tag @room.cover_photo(resize: '1100x1100>'), width: "100%", crop: "fill", height: "550px" %>
    </div>
  </div>
  <br>

  <div class="row">

    <!-- LEFT PANEL -->
    <div class="col-md-8">

      <!-- Listing Name -->
      <div class="row">
        <div class="col-md-8">
          <h1><%= @room.listing_name %></h1>
          <%= @room.address %>
        </div>
        <div class="col-md-4 text-center">
          <%= image_tag avatar_url(@room.user), class: "avatar-large" %>
          <br><br>
          <%= @room.user.fullname %>
        </div>
      </div>
      <hr>

      <!-- Room Info -->
      <div>
        <div class="row text-babu-icons text-center row-space-1">
          <!-- <div class="row text-center row-space-1"> -->
            <div class="col-md-3">
              <i class="fa fa-home fa-2x"></i>
            </div>

            <div class="col-md-3">
              <i class="fa fa-user fa-2x"></i>
            </div>

            <div class="col-md-3">
              <i class="fa fa-bed fa-2x"></i>
            </div>

            <div class="col-md-3">
              <i class="fa fa-bath fa-2x"></i>
            </div>

          <!-- </div> -->
        </div>
        <div class="row text-center">
          <div class="col-md-3"><%= @room.home_type %></div>
          <!-- pluralize if more than 1 (Bedroom -> Bedrooms) -->
          <div class="col-md-3"><%= pluralize(@room.accommodate, "Guest") %></div>
          <div class="col-md-3"><%= pluralize(@room.bed_room, "Bedroom") %></div>
          <div class="col-md-3"><%= pluralize(@room.bath_room, "Bathroom") %></div>
        </div>
      </div>
      <hr>

      <!-- Summary -->
      <div class="row">
        <div class="col-md-12">
          <h3>About This Room</h3>
          <p><%= @room.summary %></p>
        </div>
      </div>
      <hr>

      <!-- Amenities -->
      <div class="row">
        <div class="col-md-3">
          <h4>Ammenities</h4>
        </div>
        <div class="col-md-9">
          <div class="row">

            <div class="col-md-6">
              <ul class="amenities">
                <li class="<%= 'text-line-through' if !@room.is_tv %>">TV</li>
                <li class="<%= 'text-line-through' if !@room.is_kitchen %>">Kitchen</li>
                <li class="<%= 'text-line-through' if !@room.is_internet %>">Internet</li>
              </ul>
            </div>

            <div class="col-md-6">
              <ul class="amenities">
                <li class="<%= 'text-line-through' if !@room.is_heating %>">Heating</li>
                <li class="<%= 'text-line-through' if !@room.is_air %>">Air-Condition</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <hr>

      <!-- Carousel -->
      <div class="row">
        <div class="col-md-12">
          <% if @photos.length > 0 %>

          <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <% @photos.each do |photo| %>
                <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
              <% end %>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <% @photos.each do |photo| %>
                  <!-- is active if photo id is the first pic -->
                  <div class="carousel-item <%='active' if photo.id == @photos[0].id %>">
                    <%= image_tag photo.variant(resize: '600x600>') %>
                    <!-- description -->
                 <!--    <div class="carousel-caption d-none d-md-block">
                      <h5></h5>
                      <p></p>
                    </div> -->
                  </div>
                <% end %>
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

        <% end %>
        </div>

      </div>
      <hr>

      <!-- GOOGLE MAP -->
      <div class="row">

        <div id="map" style="width: 100%; height: 400px"></div>
        <script
          src=
            "https://maps.googleapis.com/maps/api/js?key=#{ENV['GOOGLE_API_BROWSER_KEY']}&v=3&callback=initialize">
        </script>

        <script>
          function initialize() {
            var location = {
              lat: <%= @room.latitude %>,
              lng: <%= @room.longitude %>
            };
            var map = new google.maps.Map(document.getElementById('map'), {
              center: location,
              zoom: 15
            });

          // add marker
            var marker = new google.maps.Marker({
              position: location,
              map: map
            });

          // // add inforwindow with pic
          //   var infoWindow = new google.maps.InfoWindow({
          //     content: '<div id="content"><%= image_tag @room.cover_photo(resize:'200x200>') %></div>'
          //   });

          //   infoWindow.open(map, marker);

          // circle area
            var circle = new google.maps.Circle({
              map: map,
              radius: 200, // this is in metres
              fillColor: '#e20976',
              strokeColor: '#e20976',
              strokeOpacity: 0.8,
              strokeWeight: 1.4
              });

              marker.setMap(null);
              circle.bindTo('center', marker, 'position');
          }

          google.maps.event.addDomListener(window, 'load', initialize);
        </script>

      </div>
      <hr/>

      <!-- ROOMS NEAR BY -->
      <div>
          <h3>More homes you may like</h3>
          <div class="row">
            <% if (@room.nearbys(10)) %>
              <!-- for loop for geocode radius 10 km -->
              <% for room in @room.nearbys(10).max(3).shuffle %>
                <div class="col-md-4">
                  <div class="panel panel-default">
                    <div class="panel-heading preview">
                      <%= image_tag room.cover_photo(resize: '300x300>') %>
                    </div>
                    <div class="panel-body">
                      <%= link_to room.listing_name, room %><br>
                      -- <%= room.distance.round(1) %> km --
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
      </div>

    </div>

    <!-- RIGHT PANEL -->
      <div class="col-md-4">
        <!-- reservation form -->
        <%= render 'reservations/form' %>
      </div>

  </div>

</div>
