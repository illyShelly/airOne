<!-- default structure -->
<div class="container">

  <div class="row">
    <div class="col-md-3">
      <%= render 'room_menu' %>
    </div>
    <!-- second column -->
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          Pricing
        </div>

        <div class="panel-body">
          <div class="container">
             <%= form_for @room do |f| %>

              <!-- <div class="row"> -->
                <div class="form-group">
                  <label>Price</label>
                  <%= f.text_field :price, placeholder: "eg: Â£150", class: "form-control", required: true %>
                </div>
              <!-- </div> -->

              <div class="text-center">
                <%= f.submit "Save", class: "btn btn-small" %>
              </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>

